# Great Nigeria Library Foundation - Frontend Environment Variables
# Copy this file to .env.local and update the values for your environment

# API Configuration
REACT_APP_API_BASE_URL=http://localhost:8080/api
REACT_APP_API_TIMEOUT=30000

# Application Configuration
REACT_APP_APP_NAME=Great Nigeria Library Foundation
REACT_APP_APP_VERSION=1.0.0
REACT_APP_ENVIRONMENT=development

# Authentication Configuration
REACT_APP_JWT_STORAGE_KEY=gnl_token
REACT_APP_REFRESH_TOKEN_KEY=gnl_refresh_token
REACT_APP_SESSION_TIMEOUT=1800000

# OAuth Configuration
REACT_APP_GOOGLE_CLIENT_ID=your-google-client-id
REACT_APP_FACEBOOK_APP_ID=your-facebook-app-id

# Feature Flags
REACT_APP_ENABLE_REGISTRATION=true
REACT_APP_ENABLE_OAUTH=true
REACT_APP_ENABLE_DISCUSSIONS=true
REACT_APP_ENABLE_BOOKMARKS=true
REACT_APP_ENABLE_NOTES=true
REACT_APP_ENABLE_PROGRESS_TRACKING=true
REACT_APP_ENABLE_SOCIAL_FEATURES=true
REACT_APP_ENABLE_NOTIFICATIONS=true

# UI Configuration
REACT_APP_THEME=light
REACT_APP_DEFAULT_LANGUAGE=en
REACT_APP_ITEMS_PER_PAGE=20
REACT_APP_MAX_FILE_SIZE=10485760

# External Services
REACT_APP_ANALYTICS_ID=your-google-analytics-id
REACT_APP_SENTRY_DSN=your-sentry-dsn
REACT_APP_STRIPE_PUBLIC_KEY=your-stripe-public-key

# Development Configuration
REACT_APP_DEBUG=false
REACT_APP_LOG_LEVEL=info
REACT_APP_MOCK_API=false

# Content Configuration
REACT_APP_DEFAULT_BOOK_COVER=/images/default-book-cover.jpg
REACT_APP_CONTENT_BASE_URL=http://localhost:8080/content
REACT_APP_UPLOAD_BASE_URL=http://localhost:8080/uploads

# Social Media Links
REACT_APP_FACEBOOK_URL=https://facebook.com/greatnigerialibrary
REACT_APP_TWITTER_URL=https://twitter.com/greatnigeria
REACT_APP_INSTAGRAM_URL=https://instagram.com/greatnigerialibrary
REACT_APP_LINKEDIN_URL=https://linkedin.com/company/great-nigeria-library

# Contact Information
REACT_APP_SUPPORT_EMAIL=support@greatnigeria.com
REACT_APP_CONTACT_PHONE=+234-xxx-xxx-xxxx
REACT_APP_CONTACT_ADDRESS=Lagos, Nigeria

# SEO Configuration
REACT_APP_SITE_NAME=Great Nigeria Library Foundation
REACT_APP_SITE_DESCRIPTION=Democratizing access to Nigerian knowledge and culture
REACT_APP_SITE_KEYWORDS=Nigeria,Library,Education,Books,Culture,Knowledge
REACT_APP_SITE_URL=https://greatnigeria.net

# PWA Configuration
REACT_APP_PWA_NAME=Great Nigeria Library
REACT_APP_PWA_SHORT_NAME=GNL
REACT_APP_PWA_THEME_COLOR=#1976d2
REACT_APP_PWA_BACKGROUND_COLOR=#ffffff
